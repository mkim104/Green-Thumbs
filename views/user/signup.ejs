<% layout('layout') %>
<link href="css/signup.css" rel="stylesheet">
<div class="container">
    <div class="text-center">
        <h1><a href="/">Green Thumbs Home</a></h1>
    </div> 
   <div class="col-md-offset-4">
         <a href="/auth/google" class="google login">
            <i class="google pic"></i> Sign up with Google
        </a>
    </div><br>
   <div class="text-center">
        <h2 class="signup"><span>SIGN UP</span></h2>
   </div><br>
    <div class="signup-manual">
        <form method="POST" class="" id="signupForm" action="/signup">
            <div class="row">
                <div class="name">
                    <input id="fullname" class="form-control" name="fullname" type="text" autocomplete="on" placeholder="FULLNAME" style="margin-top: 50px; margin-bottom:20px;" >
                </div>
            </div>
            <div class="form-input">
                <input id="email" class="form-control" name="email" type="text" autocomplete="on" placeholder="EMAIL" style="margin-bottom:20px;">
            </div>

            <div class="form-input">
                <input id="password" class="form-control" name="password" type="password" placeholder="PASSWORD" style="margin-bottom:20px;">
            </div>
            <div class="form-input">
                <input type="submit" id="submit" value="SIGN UP" class="form-control btn btn-primary" name="submit" style="">
            </div>
          </form>
          <div>
              <h4>Already have an account? <a href="/login">Login</a></h4>
          </div>
    </div>
</div>
