<!DOCTYPE html>
<% layout('layout2') %>

    <link href="css/home.css" rel="stylesheet">
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-brand">
                <a href="/home">Green Thumbs</a>
            </div>
            <ul class="sidebar-nav">
                <img src="/uploads/plc.png" class="img-responsive img-circle profile_img" alt="profile picture">
                <div class="profile_info">
                    <span>Welcome Back, </span>
                    <h2>
                        <%= user.fullname %>
                    </h2>
                </div>
                <li>
                    <a href="/home">
                        <i class="fa fa-home"> Home</i>
                    </a>
                    <a href="/organizations">
                        <i class="fa fa-building-o"> Organizations</i>
                    </a>
                    <a href="/organization/search">
                        <i class="fa fa-search"> Search Organizations</i>
                    </a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <a href="#menu-toggle" class="btn tog-menu" id="menu-toggle">Toggle Menu</a>
            </div>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right nav_bar">
                <li class="logout-button"> <a href="/logout">Log Out</a></li>
            </ul>
        </div>
        <div id="page-content-wrapper" class="page-content-wrapper">
            <div class="container-fluid main_body main_body">
                <h1>Hello, <%= user.fullname %>
                </h1>
                <p>What would you like to do today?</p>

                <div class="row">
                        <div class="info-icon"></div>
                        <h3 class="text-center">Add an Organization</h3>
                        <p class="text-center">Add an organization profile</p>
                        <a href="/organization/create" class="btn btn-block link_btn button-ting">Add</a>
                    </div>
                    <div class="row">
                        <div class="info-icon"></div>
                        <h3 class="text-center">Search</h3>
                        <p class="text-center">Search through organizations</p>
                        <a href="/organization/search" class="btn btn-block link_btn button-ting">Search</a>
                    </div>
                    <div class="row">
                        <div class="info-icon"></div>
                        <h3 class="text-center">Give a Review</h3>
                        <p class="text-center">Review and Rate organizations</p>
                        <a href="/organizations" class="btn btn-block link_btn button-ting">Review</a>
                    </div>
            </div>
        </div>
    </div>