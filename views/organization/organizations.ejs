<% layout('layout3') %>
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-brand">
                <a href="/home">Green Thumbs</a>
            </div>
            <ul class="sidebar-nav">
                <img src="http://placehold.it/100x100" class="img-responsive img-circle profile_img" alt="">
                <div class="profile_info">
                    <span>Welcome Back, </span>
                    <h2>
                        <%= user.fullname %>
                    </h2>
                </div>
                <li>
                    <a href="/home">
                        <i class="fa fa-home">Home</i>
                    </a>
                    <a href="/organizations">
                        <i class="fa fa-building-o">Organizations</i>
                    </a>
                    <a href="/organization/search">
                        <i class="fa fa-search">Search Organizations</i>
                    </a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
            </div>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right nav_bar">
                <li><a href="/logout">Log Out</a></li>
            </ul>
        </div>
        <div id="page-content-wrapper">
            <!-- <div class="ul_links">
                <ul>
                    <li>
                        <a href="/home">Home</a>
                    </li>
                    <li>
                        <a href="/home">Organization</a>
                    </li>
                    <li>
                        <a href="/home">Register Organization</a>
                    </li>
                </ul>
            </div> -->
            <div class="bodyDiv">
                <h2>Organizations</h2>
                <% for (var i=0; i < data.length; i++) { %>
                    <div class="col-xs-12 col-md-6 col-lg-4 organizationListDiv">
                        <div class="organization-info-container">
                            <a href="/organization-profile/<%= data[i]._id %>">
                                <img src="/uploads/<%= data[i].image %>" class="organizationListItemLogo"
                                    alt="Company logo">
                                <div class="organizationListItemInfo">
                                    <h5>
                                        <%= data[i].name %>
                                    </h5>
                                    <span><i class="thumb"></i>*****</span><br>
                                    <i class="fa fa-building-o">
                                        <%= data[i].sector %>
                                    </i>
                                    <br>
                                    <i class="fa fa-map-marker">
                                        <%= data[i].city %>, <%= data[i].country %>
                                    </i>
                                </div>
                            </a>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>