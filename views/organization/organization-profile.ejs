<!DOCTYPE html>
<link href="/css/org-profile.css" rel="stylesheet">


<% layout('layout3') %>
    <div id="wrapper">
        <div id="sidebar-wrapper" role="navigation">
            <div class="sidebar-brand">
                <a href="/home">Green Thumbs</a>
            </div>
            <ul class="sidebar-nav">
                <img src="/uploads/plc.png" class="img-responsive img-circle profile_img" alt="profile picture">
                <div class="profile_info" tabindex="0">
                    <span >Welcome Back, </span>
                    <h2>
                        <%= user.fullname %>
                    </h2>
                </div>
                <li>
                    <a href="/home">
                        <i class="fa fa-home"> Home</i>
                    </a>
                    <a href="/organizations">
                        <i class="fa fa-building-o"> Organizations</i>
                    </a>
                    <a href="/organization/search">
                        <i class="fa fa-search"> Search Organizations</i>
                    </a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <a href="#menu-toggle" class="btn tog-menu" id="menu-toggle">Toggle Menu</a>
            </div>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right nav_bar">
                <li class="logout-button"><a href="/logout">Log Out</a></li>
            </ul>
        </div>
        <div id="page-content-wrapper">
            <div class="bodyDiv" role="main">
                <h2 tabindex="0">Organization Profile</h2>
                <div class="form-groups">
                    <a href="/organizations" class="form-control btn button-tings"> Back </a>
                </div>  
                <div class="row mainDiv">
                    <div class="innerDiv" role="">
                        <div class="col-md-3" style="margin-bottom: 30px;">
                            <img src="/uploads/<%= data.image %>" class="organizationListItemLogo" alt="Company image">
                            <h3 tabindex="0">
                                <%= data.name %>
                            </h3>
                            <i tabindex="0" class="fa fa-building-o">
                                <%= data.sector %>
                            </i>
                            <br>
                            <i tabindex="0" class="fa fa-map-marker">
                                <%= data.city %>, <%= data.country %>
                            </i>
                            <br>
                            <i class="fa fa-external-link">
                                <span class="website"><a href="http://<%= data.website %>" target="_blank">
                                    <%= data.name%>'s website
                                </a></span>
                            </i>
                            <br><br>
                            <a href="/review/<%= data._id %>" class="btn">Create a Review / Rating</a><br>
                            <br>
                            <h4 tabindex="0"><b>Average Thumbs:</b><br><br>
                                <%= average %> / 5.0
                            </h4>
                            <span class="thumb" data-score="<%= average %>"></span>
                            <p>
                                based on <%= data.ratingNumber.length %> rating(s)
                            </p>
                            <br>
                            <h4 tabindex="0"><b>Reviews:</b></h4>
                            <div tabindex="0" class="review-container">
                                <% for (var i=0; i < data.organizationRating.length; i++) { %>
                                    <div class="review-card" style="margin-bottom: 5px;">
                                        <div class="review-name">
                                            Name: <%= data.organizationRating[i].userFullname %>
                                        </div>
                                        <div class="review-rating">
                                            Rating: <%= data.organizationRating[i].userRating %>
                                        </div>
                                        <div class="review-content">
                                            Review: <%= data.organizationRating[i].userReview %>
                                        </div>
                                    </div>
                                    <br>
                                    <% } %>
                            </div>
                        </div>
                        <div class="col-md-9 colDiv">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="count">
                                        <h1 tabindex="0">
                                            <%= data.ratingNumber.length %> Ratings
                                        </h1>
                                        
                                    </div>
                                </div>

                                <div class="col-md-4 total-thumb">
                                    <div class="count">
                                        <p tabindex="0">
                                            <%= data.ratingSum %> Total Thumbs
                                        </p>                    
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                            
                </div>
            </div>

        </div>
    </div>