<!DOCTYPE html>
<% layout('layout3') %>

    <div id="wrapper">
        <div id="sidebar-wrapper" role="navigation">
            <div class="sidebar-brand">
                <a href="/home">Green Thumbs</a>
            </div>
            <ul class="sidebar-nav">
                <img src="/uploads/plc.png" class="img-responsive img-circle profile_img" alt="">
                <div class="profile_info" tabindex="0">
                    <span>Welcome Back, </span>
                    <h2>
                        <%= user.fullname %>
                    </h2>
                </div>
                <li>
                    <a href="/home">
                        <i class="fa fa-home"> Home</i>
                    </a>
                    <a href="/organizations">
                        <i class="fa fa-building-o"> Organizations</i>
                    </a>
                    <a href="/organization/search">
                        <i class="fa fa-search"> Search Organizations</i>
                    </a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <a href="#menu-toggle" class="btn tog-menu" id="menu-toggle">Toggle Menu</a>
            </div>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right nav_bar">
                <li class="logout-button"><a href="/logout">Log Out</a></li>
            </ul>
        </div>
        <div id="page-content-wrapper">
            <div class="bodyDiv">
                <h2 tabindex="0">Create a Review / Rating</h2>

                <% if (hasMsg) { %>
                    <div class="alert alert-success">
                        <%= msg %>
                    </div>
                    <% } %>

                        <form action="" method="POST" role="form">
                            <input class="form-control" id="id" value="<%= data._id %>" type="hidden">
                            <div class="form-group">
                                <h3 tabindex="0"    >Organization: <%= data.name %>
                                </h3>
                                <input type="hidden" id="receiver" class="form-control" name="receiver"
                                    value="<%= data.name %>">
                                <input type="hidden" id="sender" class="form-control" name="sender"
                                    value="<%= user.organization.name %>">
                            </div>

                            <div class="form-group">
                                <div id="error"></div>
                                <label for="" tabindex="0">Rating</label>
                                <div class="col-sm-12" id="thumb_rating" tabindex="0">
                                    <img id="thumb1" class="thumb" src="/images/empty.png" alt="thumb" title="Terrible">
                                    <img id="thumb2" class="thumb" src="/images/empty.png" alt="thumb" title="Bad">
                                    <img id="thumb3" class="thumb" src="/images/empty.png" alt="thumb" title="Average">
                                    <img id="thumb4" class="thumb" src="/images/empty.png" alt="thumb" title="Good">
                                    <img id="thumb5" class="thumb" src="/images/empty.png" alt="thumb"
                                        title="Excellent">

                                    <span id="showTitle"></span>
                                </div>
                            </div>

                            <div tabindex="0" class="form-group">
                                <br><br><br>
                                <label for="">Review</label>
                                <textarea name="review" id="review" class="form-control" rows="5" cols="100"></textarea>
                            </div>

                            <div tabindex="0" class="form-group">
                                <input type="submit" value="Submit" class="form-control btn button-ting" id="rate">
                            </div>
                        </form>
            </div>

        </div>
    </div>